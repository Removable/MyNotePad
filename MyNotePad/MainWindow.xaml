<Window x:Class="MyNotePad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyNotePad"
        mc:Ignorable="d"
        Title="记事本" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,0.5">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="403*"/>
        </Grid.RowDefinitions>
        <Menu x:Name="Menu" Grid.Row="0" Background="White">
            <MenuItem Header="文件" Height="20" Width="38">
                <MenuItem Header="新建" Click="CreateNewWindow"></MenuItem>
            </MenuItem>
        </Menu>
        <TextBox x:Name="MainTextBox" Grid.Row="1" TextWrapping="Wrap" Text=""
                 VerticalScrollBarVisibility="Visible" AcceptsReturn="True"/>
    </Grid>
</Window>
